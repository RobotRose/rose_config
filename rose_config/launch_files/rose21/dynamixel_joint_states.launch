<launch>    
    <!-- Start the Dynamixel Joint States Publisher -->
    <node machine="pc1" name="dynamixel_joint_states_publisher" pkg="dynamixel_joint_state_publisher" type="dynamixel_joint_state_publisher.py" output="screen">
        <remap from="/joint_states" to="/neck/jointstates" />
        <rosparam>
            joint_controllers: ['neck_pan_controller', 'neck_tilt_controller']
       </rosparam>
   </node>
</launch>
